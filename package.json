{
  "name": "react-native-accordion-view",
  "version": "1.0.0",
  "description": "react-native-accordion-view",
  "main": "index.tsx",
  "module": "index.tsx",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yasinsolak/react-native-accordion-view"
  },
  "keywords": [
    "react-native"
  ],
  "author": "Yasin Solak",
  "license": "MIT",
  "dependencies": {
    "react": "~16.11.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-38.0.2.tar.gz",
    "react-native-gesture-handler": "~1.6.0",
    "react-native-reanimated": "^1.9.0",
    "react-native-redash": "9.1.1"
  },
  "devDependencies": {
    "@types/react": "~16.9.41",
    "@types/react-native": "~0.62.13",
    "typescript": "~3.9.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "plugin:react/recommended",
      "universe"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint",
      "react-hooks"
    ],
    "rules": {
      "react/display-name": 0,
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "prettier/prettier": [
        "warn",
        {
          "semi": false,
          "singleQuote": true,
          "jsxBracketSameLine": true,
          "trailingComma": "none"
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
